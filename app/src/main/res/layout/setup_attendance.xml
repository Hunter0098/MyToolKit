<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_start"
        android:padding="10dp"
        tools:context=".Setup">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/usernameTextView0"
                android:textSize="25sp"
                android:text="Welcome\nEnter your Webkiosk Information"
                android:textAlignment="center"
                android:layout_weight=".100"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/TextView1"
                android:textSize="25sp"
                android:text="Enter your name: "
                android:layout_weight=".50"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/EditText1"
                android:textSize="25sp"
                android:hint="Name"
                android:layout_weight=".50"/>
    </LinearLayout>

    <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/TextView2"
                android:textSize="25sp"
                android:text="College Id: "
                android:layout_weight=".50"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/EditText2"
                android:textSize="25sp"
                android:hint="JIIT/J128"
                android:layout_weight=".50"/>
    </LinearLayout>

    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/TextView3"
                android:textSize="25sp"
                android:text="Enrollment No.: "
                android:layout_weight=".50"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/EditText3"
                android:textSize="25sp"
                android:hint="0123456789"
                android:layout_weight=".50"/>
    </LinearLayout>

    <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/TextView4"
                android:textSize="25sp"
                android:text="Date of Birth: "
                android:layout_weight=".50"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/EditText4"
                android:textSize="25sp"
                android:hint="dd-mm-yyyy"
                android:layout_weight=".50"/>
    </LinearLayout>

    <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/TextView5"
                android:textSize="25sp"
                android:text="Password: "
                android:layout_weight=".50"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/EditText5"
                android:textSize="25sp"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_weight=".50"/>
    </LinearLayout>

    <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/saveSetupDetails"
                android:text="Save Details"
                style="@style/AppTheme.ButtonBlue"/>
    </LinearLayout>

</LinearLayout>